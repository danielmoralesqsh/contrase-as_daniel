<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".Login_usuario.Login_user">

    <TextView
        android:text="@string/TXT_Bienvenidos"
        android:textSize="25sp"
        android:fontFamily="@font/robotocondensed_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--ContraseÃ±a Usuario-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/EtMPassword"
            android:fontFamily="@font/robotocondensed_regular"
            android:hint="@string/EtMPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Registrar ingresar-->
    <Button
        android:id="@+id/Btn_ingresar"
        android:text="@string/Btn_ingresar"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotocondensed_regular"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:text="@string/TXT_otro_metodo"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotocondensed_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/BtnInicioSesionBiometrico"
        android:text="@string/BtnInicioSesionBiometrico"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotocondensed_regular"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="huella_login.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</androidx.appcompat.widget.LinearLayoutCompat>